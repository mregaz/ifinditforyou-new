type Props = {
  params: { locale: Locale };
};

export async function generateMetadata({ params }: Props): Promise<Metadata> {
  const { locale } = params;

  // Path relativo della pagina "about"
  const path = "/about";

  // URL canonico completo per questa lingua
  const canonicalUrl = `${baseUrl}${localePathname(locale, path)}`;

  // Costruisco tutti gli hrefLang (it, en, fr, de)
  const languages = locales.reduce<Record<string, string>>((acc, loc) => {
    const href = `${baseUrl}${localePathname(loc, path)}`;
    acc[loc] = href;
    return acc;
  }, {});

  return {
    title:
      locale === "it"
        ? "Chi siamo – iFindItForYou"
        : locale === "en"
        ? "About us – iFindItForYou"
        : locale === "fr"
        ? "À propos – iFindItForYou"
        : "Über uns – iFindItForYou",
    description:
      locale === "it"
        ? "Scopri chi c’è dietro iFindItForYou."
        : locale === "en"
        ? "Learn more about the team behind iFindItForYou."
        : locale === "fr"
        ? "Découvrez l’équipe derrière iFindItForYou."
        : "Erfahren Sie mehr über das Team hinter iFindItForYou.",
    alternates: {
      canonical: canonicalUrl,
      languages,
    },
    openGraph: {
      url: canonicalUrl,
      title: "iFindItForYou – About",
      description: "Scopri di più sul progetto iFindItForYou.",
    },
    twitter: {
      card: "summary_large_image",
      title: "iFindItForYou – About",
      description: "Scopri di più sul progetto iFindItForYou.",
    },
  };
}
